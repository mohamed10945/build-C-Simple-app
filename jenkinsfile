pipeline {
    agent any

    environment {
        
	BUILD_DIR = 'build'
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/mohamed10945/build-C-Simple-app.git'
            }
        }
        
        stage('Build') {
            steps {
                cmake arguments: '-DCMAKE_TOOLCHAIN_FILE=~/Projects/vcpkg/scripts/buildsystems/vcpkg.cmake', installation: 'InSearchPath'
                cmakeBuild buildType: 'Release', cleanBuild: true, installation: 'InSearchPath', steps: [[withCmake: true]]'

            }
        }
        
        stage('Test') {
            steps {
                script {
                    // Run tests
                    sh 'cd ${BUILD_DIR} && ctest'
                }
            }
        }
        
        stage('Deploy') {
            steps {
                script {
                     echo 'Deploying...'
                }
            }
        }
    }
    
}

