pipeline {
    agent any

    environment {
        
	BUILD_DIR = 'build'
    }

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/mohamed10945/build-C-Simple-app.git'
            }
        }
        
        stage('Build') {
            steps {
                script {
                    
                    sh 'mkdir -p ${BUILD_DIR}'
                    sh 'cd ${BUILD_DIR} && cmake ..'
                    sh 'cd ${BUILD_DIR} && make'
                }
            }
        }
        
        stage('Test') {
            steps {
                script {
                    // Run tests
                    sh 'cd ${BUILD_DIR} && ctest'
                }
            }
        }
        
        stage('Deploy') {
            steps {
                script {
                     echo 'Deploying...'
                }
            }
        }
    }
    
}

